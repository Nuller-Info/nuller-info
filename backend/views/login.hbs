<html>
  <head>
    <link rel="stylesheet" type="text/css" href="../admin.css" />
    <title>TrialInfo - Anmeldung</title>
    <script>
      function mode(mode, event) {
	if (event)
	  event.preventDefault();
	['login', 'signup', 'reset'].forEach(function(mode) {
	  Array.from(document.getElementsByClassName(mode))
	    .forEach(function(element) {
	      element.setAttribute('style', 'display:none');
	    });
	});
	Array.from(document.getElementsByClassName(mode))
	  .forEach(function(element) {
	    element.setAttribute('style', '');
	  });
	form.setAttribute('action', form.getAttribute('action')
	  .replace(/^[^?]*/, '/' + mode));
      }

      function loaded() {
	document.getElementById('nojs').setAttribute('style', 'display:none');
	document.getElementById('js').setAttribute('style', '');
	mode({{{json-stringify mode}}});
	document.getElementById('email').focus();
      }
    </script>

    <style>
    table th {
      text-align:right;
    }
    </style>
  </head>
  <body onload="loaded()">
    <div id="nojs">
      <p>Bitte aktivieren Sie JavaScript, um TrialInfo zu verwenden.</p>
    </div>
    <div id="js" style="display:none">
      <span class="login">
	<h1>TrialInfo – Anmeldung</h1>
      </span>
      <span class="signup">
	<h1>TrialInfo – Neu registrieren</h1>
      </span>
      <span class="reset">
	<h1>TrialInfo – Kennwort zurücksetzen</h1>
      </span>
      {{#if error}}
      <p style="color:red">{{{error}}}</p>
      {{/if}}
      <form id="form" action="/login{{{query}}}" method="post">
	<table>
	  <tr class="login signup reset">
	    <th>E-Mail</th>
	    <td>
	      <input type="text" name="email" value="{{email}}" size="40" maxlength="60" id="email">
	    </td>
	  </tr>
	  <tr class="login">
	    <th>Kennwort</th>
	    <td>
	      <input type="password" name="password" size="12">
	    </td>
	  </tr>
	  <tr>
	    <th></th>
	    <td>
	      <button class="login" type="submit">Anmelden</button>
	      <button class="signup reset" type="submit">E-Mail-Bestätigung senden</button>
	    </td>
	  </tr>
	  <tr>
	    <th></th>
	    <td>
	      <a class="signup reset" href="#" onclick="mode('login',event)">Anmelden</a>
	      <a class="login reset" href="#" onclick="mode('signup',event)">Neu registrieren</a>
	      <a class="login signup" href="#" onclick="mode('reset',event)">Kennwort zurücksetzen</a>
	    </td>
	  </tr>
	</table>
      </form>
    </div>
  </body>
</html>
